<h2>注文履歴詳細</h2>

<table>
  <h3>注文情報</h3>
   <tr>
     <th>注文日</th>
     <th>配送先</th>
     <th>支払方法</th>
     <th>ステータス</th>
   </tr>
   <tr>
     <td>
       <%= l @order.created_at, format: :short %>
     </td>
     <td>
       <%= @order.address_display %>
     </td>
     <td>
       <%= @order.payment_method_i18n %>
     </td>
     <td>
       <%= @order.status_i18n %>
     </td>
   </tr>
</table>

<table>
  <h3>請求情報</h3>
    <tr>
      <th>商品合計</th>
      <th>配送料</th>
      <th>ご請求額</th>
    </tr>
    <tr>
      <td>
        <% order_total = 0 %>
        <% @order.order_details.each do |order_detail| %>
          <% order_total = order_total + order_detail.price * order_detail.amount %>
        <% end %>
        <%= order_total %>
      </td>
      <td>
        <%= @order.shipping_cost %>
      </td>
      <td>
        <%= @order.total_payment %>
      </td>
    </tr>
</table>

<table>
  <h3>注文内容</h3>
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
    <tr>
    <% @order_details.each do |order_detail| %>
      <td>
        <%= order_detail.item.name %>
      </td>
      <td>
        <%= order_detail.price %>
      </td>
      <td>
        <%= order_detail.amount %>
      </td>
      <td>
        <%= order_detail.price * order_detail.amount %>
      </td>
      <% end %>
    </tr>
</table>