<h2>注文情報確認</h2>

<thead>
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </tr>
</thead>

<table>
  <tbody>
    <tr>
    <% @cart_items.each do |cart_item| %>
      <td>
        <%= image_tag cart_item.item.get_image %>
      </td>
      <td>
        <%= cart_item.item.name %>
      </td>
      <td>
        <%= cart_item.item.with_tax_price %>
      </td>
      <td>
        <%= cart_item.amount %>
      </td>
      <td>
        <%= cart_item.subtotal %>
      </td>
      <td>
        <% @total +=  cart_item.subtotal %>
      </td>
    </tr>
  </tbody>
</table>
<% end %>

<thead>
  <tr>
    <th>送料</th>
    <th>商品合計</th>
    <th>請求金額</th>
  </tr>
</thead>

<table>
  <tbody>
      <tr>
        <td>
          <%= @order.shipping_cost %>
        </td>
        <td>
          <%= @total %>
        </td>
        <td>
          <%= @order.shipping_cost + @total %>
        </td>
      </tr>
  </tbody>
</table>