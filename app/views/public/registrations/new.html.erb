<div class="container">
  <div class="row">
  <div class="col-4"><h2>新規会員登録</h2></div>
</div>

<%= form_for(resource, as: resource_name, url: customer_registration_path) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
          <div class="container">
            <div class="row">
              <div class="col-md-10">
                <table class="table-borderless">
                  <tbody>
                    <tr>
                      <td><%= f.label :"名前" %></td>
                      <td>(姓)<%= f.text_field :last_name %></td>
                      <td>(名)<%= f.text_field :first_name %></td>
                    </tr>

                    <tr>
                      <td><%= f.label :"フリガナ" %></td>
                      <td>(セイ)<%= f.text_field :last_name_kana %></td>
                      <td>(メイ)<%= f.text_field :first_name_kana %></td>
                    </tr>

                    <tr>
                      <td><%= f.label :"メールアドレス" %></td>
                      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
                    </tr>

                    <tr>
                      <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
                      <td><%= f.text_field :postal_code %></td>
                    </tr>

                    <tr>
                      <td><%= f.label :"住所" %></td>
                      <td><%= f.text_field :address, :size=>"50" %></td>
                    </tr>

                    <tr>
                      <td><%= f.label :"電話番号(ハイフンなし)" %></td>
                      <td><%= f.text_field :telephone_number %></td>
                    </tr>

                    <tr>
                      <td><%= f.label :"パスワード(6文字以上)" %></td>
                      <td>
                        <% if @minimum_password_length %>
                        <% end %>
                        <%= f.password_field :password, autocomplete: "new-password" %>
                      </td>
                    </tr>

                    <tr>
                      <td>
                        <%= f.label :"パスワード(確認用)" %>
                      </td>
                      <td>
                        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                      </td>
                    </tr>

                    <tr>
                      <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
                    </tr>
                 <% end %>
                 　</tbody>
      　　　　　　　　　</table>
    　　　　　　</div>
  　　　　　　</div>
　　　　</div>

<div class="container">
  <div class="row">
    <div class="col-4"><h4>既に登録済みの方</h4></div>
  </div>
    <td><%= link_to 'こちら', new_customer_session_path %>からログインしてください。</td>
</div>