<div class="container">
  <div class="row">
  <div class="col-5"><h2>マイページ</h2></div>
</div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-9">
      <table class="table-borderless">
      <tr>
        <th><h4>登録情報</h4></th>
        <td><%= link_to '編集する', edit_customers_path, class: "btn btn-success" %></td>
      </tr>
      </table>
      <div class="col-lg-7">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>氏名</th>
            <td><%= @customer.full_name %></td>
          </tr>

          <tr>
            <th>カナ</th>
            <td><%= @customer.full_name_kana %></td>
          </tr>

          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>

          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>

          <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>

          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
       </tbody>
      </table>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-7">
      <table class="table-borderless">

        <tr>
          <th><h4>配送先</h4></th>
          <td><%= link_to '一覧を見る', addresses_path, class: "btn btn-primary" %></td>
        </tr>

        <tr>
          <th><h4>注文履歴</h4></th>
          <td><%= link_to '一覧を見る', orders_path, class: "btn btn-primary" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>