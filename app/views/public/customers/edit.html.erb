<div class="container">
  <div class="row">
  <div class="col-5"><h2>会員情報編集</h2></div>
  </div>
</div>

<div class="container0">
  <div class="row">
    <div class="col-lg-7">
      <%= form_with model: @customer, url: customers_path, method: :patch do |f| %>
      <table class="table-borderless">
        <tbody>

        <div class="field">
          <th><%= f.label :"名前" %></th>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </div>

<div class="field">
  <%= f.label :"フリガナ" %>
  <%= f.text_field :last_name_kana %>
  <%= f.text_field :first_name_kana %>
</div>

<div class="field">
  <%= f.label :"郵便番号" %>
  <%= f.text_field :postal_code %>
</div>

<div class="field">
  <%= f.label :"住所" %>
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :"電話番号" %>
  <%= f.text_field :telephone_number %>
</div>

<div class="field">
  <%= f.label :"メールアドレス" %>
  <%= f.text_field :email %>
</div>

<%= f.submit '編集内容を保存', class: "btn btn-success" %>

<% end %>

<%= link_to '退会する', customers_unsubscribe_path, class: "btn btn-danger" %>
        </tbody>
      </table>
    </div>
  </div>