<div class="container">
  <div class="row">
      <div class="col-lg-5">
        <tr>
          <td><h2>商品一覧</h2>(全<%= Item.all.count %>件)</td>
        </tr>
      </div>
  </div>
</div>

<div class="container">
    <div class="row">
    <% @items.each do |item| %>
      <div class="col-lg-3">
        <div>
          <%= link_to item_path(item.id) do %>
          <%= image_tag item.get_image %>
          <% end %>
        </div>
        <div>
          <%= item.name %>
        </div>
        <div>
          ￥<%= item.add_tax_sales_price.to_s(:dalimited) %>
        </div>
      </div>
      <% end %>
    </div>
</div>

<div class="container"><br>
  <div class="row">
    <div class="col-6">
      <p class="text-center"><%= paginate @items %></p>
    </div>
  </div>
</div>
