<div class="container">
  <div class="row">
      <div class="col-lg-5">
        <tr>
          <td><h2>商品一覧</h2>(全<%= Item.all.count %>件)</td>
        </tr>
      </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-">
      <tbody>
  <% @items.each do |item| %>
  <tr>
    <td>
      <%= link_to item_path(item.id) do %>
      <%= image_tag item.get_image %>
      <% end %>
    </td>
    <td>
      <%= item.name %>
    </td>
    <td>
      ￥<%= item.add_tax_sales_price.to_s(:dalimited) %>
    </td>
    <% end %>
    <%= paginate @items %>
  </tr>
</tbody>
    </div>
  </div>
</div>