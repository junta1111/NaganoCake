<div class="container">
  <div class="row">
  <div class="col-5"><h2>配送先編集</h2></div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-10"><br>
      <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
      <table class="table-borderless">
        <tbody>

        <tr>
          <div class="field">
            <th><%= f.label :'郵便番号(ハイフンなし)' %></th>
            <td><%= f.text_field :postal_code %></td>
          </div>
        </tr>

        <tr>
          <div class="field">
            <th><%= f.label :"住所" %></th>
            <td><%= f.text_field :address, :size=>"75" %></td>
          </div>
        </tr>

        <tr>
          <div class="field">
            <th><%= f.label :"宛名" %></th>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit '変更内容を保存', class: "btn btn-success" %></td>
          </div>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>