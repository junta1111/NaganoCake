<div class="container">
  <div class="row">
  <div class="col-5"><h2>配送先登録/一覧</h2></div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-10"><br>
      <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
      <table class="table-borderless">
        <tbody>

        <tr>
          <div class="field">
            <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
            <td><%= f.text_field :postal_code %></td>
          </div>
        </tr>

        <tr>
          <div class="field">
            <th><%= f.label :"住所" %></th>
            <td><%= f.text_field :address, :size=>"75" %></td>
          </div>
        </tr>

        <tr>
          <div class="field">
            <th><%= f.label :"宛名" %></th>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
          </div>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-8"><br>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
          </tr>
        </thead>

        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td>
                <%= address.postal_code %>
              </td>
              <td>
                <%= address.address %>
              </td>
              <td>
                <%= address.name %>
              </td>
              <td>
                <%= link_to '編集する', edit_address_path(address.id), class: "btn btn-success" %>
                <%= link_to '削除する', address_path(address.id), method: :delete, class: "btn btn-danger" %>
             </td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>