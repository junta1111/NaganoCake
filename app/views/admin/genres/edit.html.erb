<div class="container">
  <div class="row">
  <div class="col-lg-4"><h2>ジャンル編集</h2></div>
</div>

<div class="row">
    <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
    <table class="table-borderless">
        <tr>
          <td><h4>ジャンル名</h4></td><br>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit '変更を保存', class: 'btn btn-success' %></td>
          <% end %>
        </tr>
    </table>
  </div>
</div>