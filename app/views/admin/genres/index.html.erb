<div class="container">
  <div class="row">
  <div class="col-5"><h2>ジャンル一覧・追加</h2></div>
  </div>

  <div class="row">
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <table class="table-borderless">
        <tr>
          <td><h4>ジャンル名</h4></td><br>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit '新規登録', class: 'btn btn-success' %></td>
          <% end %>
        </tr>
    </table>
  </div>

  <div class="col-lg-5"><br>
    <table class="table">
        <thead>
         <tr>
          <th>ジャンル</th>
         </tr>
        </thead>

        <tbody>
         <% @genres.each do |genre| %>
          <tr>
           <td>
            <%= genre.name %>
           </td>
           <td>
            <%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %>
           </td>
          </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>