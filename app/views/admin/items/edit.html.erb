<h2>商品編集</h2>

<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>

<label for="inputImage">商品画像</label>
  <%= f.file_field :image, placeholder: "商品画像", accept: "image/*" %>

<label for="inputName">商品名</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"商品名"%>

<div class="form-group">
<label for="item_introduction">商品説明</label>
 <%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %>
</div>

<div class="genre">
 <%= f.label :ジャンル %>
 <%= f.collection_select :genre_id, Genre.all, :id, :name, options = {include_blank: '--選択してください--'} %>
</div>

<h4>税抜価格</h4>
<%= f.text_field :price %>

<div class="is_active">
  <%= f.label :販売ステータス %>
  <div>
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, '販売中', value: true %>
  </div>
  <div>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, '販売停止中', value: false %>
  </div>
  <div>
    <%= f.submit '変更を保存', class: 'btn btn-success' %>
  </div>
</div>
<% end %>