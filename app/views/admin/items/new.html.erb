<div class="container">
  <div class="row">
  <div class="col-4"><h2>商品新規登録</h2></div>
</div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
      <table class="table-borderless">
        <tbody>
          <tr>
            <td><label for="inputImage">商品画像</label></td>
            <td><%= f.file_field :image, placeholder: "商品画像", accept: "image/*" %></td><br>
          </tr>

          <tr>
            <td><label for="inputName">商品名</label></td>
            <td><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"商品名"%></td>
          </tr>

         <div class="form-group">
           <tr>
             <td><label for="item_introduction">商品説明</label></td>
             <td><%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %></td>
           </tr>
         </div>

         <div class="genre">
           <tr>
             <td><%= f.label :ジャンル %></td>
             <td><%= f.collection_select :genre_id, Genre.all, :id, :name, options = {include_blank: '--選択してください--'} %></td>
           </tr>
         </div>

         <div class="price">
           <tr>
             <td><%= f.label :税抜価格 %></td>
             <td><%= f.text_field :price %>円</td>
           </tr>
         </div>

         <div class="is_active">
           <tr>
             <td><%= f.label :販売ステータス %></td>
             <td><%= f.radio_button :is_active, true %>
                 <%= f.label :is_active, '販売中', value: true %>
                 <%= f.radio_button :is_active, false %>
                 <%= f.label :is_active, '販売停止中', value: false %>
            </td>
           </tr>
         </div>

           <tr>
             <td><%= f.submit '新規登録', class: 'btn btn-success' %></td>
           </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>