<div class="container">
  <div class="row">
  <div class="col-4"><h2>商品新規登録</h2></div>
</div>

<div class="row">
  <div class="col-6 mx-auto">
<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

<label for="inputImage">商品画像</label>
  <%= f.file_field :image, placeholder: "商品画像", accept: "image/*" %><br>

<label for="inputName">商品名</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"商品名"%>

<div class="form-group">
<label for="item_introduction">商品説明</label>
 <%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %>
</div>

<div class="genre">
 <%= f.label :ジャンル %>
 <%= f.collection_select :genre_id, Genre.all, :id, :name, options = {include_blank: '--選択してください--'} %>
</div>

<div class="price">
  <%= f.label :税抜価格 %>
  <%= f.text_field :price %>円
</div>

<div class="is_active">
  <%= f.label :販売ステータス %>
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, '販売中', value: true %>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, '販売停止中', value: false %>
</div>

<%= f.submit '新規登録', class: 'btn btn-success' %>
<% end %>
</div>
</div>