<div class="container">
  <div class="row">
  <div class="col-5"><h2><%= @customer.full_name %>さんの会員情報編集</h2></div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
      <table class="table-borderless">
        <tbody>
            <tr>
              <td><h4>会員ID</h4></td>
              <td><%= @customer.id %></td>
            </tr>

            <tr>
              <td><h4>氏名</h4></td>
                <td>
                  <%= f.text_field :last_name %>
                  <%= f.text_field :first_name %>
                </td>
            </tr>

            <tr>
              <td><h4>フリガナ</h4></td>
                <td>
                  <%= f.text_field :last_name_kana %>
                  <%= f.text_field :first_name_kana %>
                </td>
            </tr>

            <tr>
              <td><h4>郵便番号</h4></td>
              <td><%= f.text_field :postal_code %></td>
            </tr>

            <tr>
              <td><h4>住所</h4></td>
              <td><%= f.text_field :address %></td>
            </tr>

            <tr>
              <td><h4>電話番号</h4></td>
              <td><%= f.text_field :telephone_number %></td>
            </tr>

            <tr>
              <td><h4>メールアドレス</h4></td>
              <td><%= f.text_field :email %></td>
            </tr>

            <tr>
              <td><h4>会員ステータス</h4></td>
                <td>
                  <div class="is_deleted">
                    <% f.label :会員ステータス %>
                  <div>
                    <%= f.radio_button :is_deleted, false %>
                    <%= f.label :is_deleted, "有効", valie: false %>
                    <%= f.radio_button :is_deleted, true %>
                    <%= f.label :is_deleted, "退会", value: true %>
                  </div>
                  </div>
                </td>
            </tr>

            <tr>
              <td><%= f.submit "変更を保存", class: 'btn btn-success' %></td>
            </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>