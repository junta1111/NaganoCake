<div class="container">
  <div class="row">
  <div class="col-5"><h2><%= @customer.full_name %>さんの会員詳細</h2></div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-7">
      <table class="table">
        <tbody>
          <tr>
            <td><h4>会員ID</h4></td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td><h4>氏名</h4></td>
            <td><%= @customer.full_name %></td>
          </tr>

          <tr>
            <td><h4>フリガナ</h4></td>
            <td><%= @customer.full_name_kana %></td>
          </tr>

          <tr>
            <td><h4>郵便番号</h4></td>
            <td><%= @customer.postal_code %></td>
          </tr>

          <tr>
            <td><h4>住所</h4></td>
            <td><%= @customer.address %></td>
          </tr>

          <tr>
            <td><h4>電話番号</h4></td>
            <td><%= @customer.telephone_number %></td>
          </tr>

          <tr>
            <td><h4>メールアドレス</h4></td>
            <td><%= @customer.email %></td>
          </tr>

          <tr>
            <td><h4>会員ステータス</h4></td>
            <td>
              <% if @customer.is_deleted == false %>
                <%= "有効" %>
              <% else %>
                <%= "退会" %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: 'btn btn-success' %></td>
            <td><%= link_to "注文履歴一覧を見る", admin_path, class: 'btn btn-primary' %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>