<h2><%= @customer.full_name %>さんの会員詳細</h2>

<h4>会員ID</h4>
<%= @customer.id %>

<h4>氏名</h4>
<%= @customer.full_name %>

<h4>フリガナ</h4>
<%= @customer.full_name_kana %>

<h4>郵便番号</h4>
<%= @customer.postal_code %>

<h4>住所</h4>
<%= @customer.address %>

<h4>電話番号</h4>
<%= @customer.telephone_number %>

<h4>メールアドレス</h4>
<%= @customer.email %>

<h4>会員ステータス</h4>
<% if @customer.is_deleted == false %>
<%= "退会" %>
<% else %>
<%= "有効" %>
<% end %>

<%= link_to "編集する", edit_admin_customer_path(@customer.id) %>
