<h2>注文履歴一覧</h2>
 <thead>
   <tr>
     <th>購入日時</th>
     <th>購入者</th>
     <th>注文個数</th>
   </tr>
 </thead>

 <tbody>
  <% @orders.each do |order| %>
   <tr>
    <td>
      <%= link_to admin_order_path(order.id) do %>
      <%= l order.created_at, format: :default %>
      <% end %>
    </td>
    <td>
      <%= order.name %>
    </td>
    <td>
      <% amount_total = 0 %>
      <% order.order_details.each do |order_detail| %>
      <% amount_total = amount_total + order_detail.amount %>
      <% end %>
      <%= amount_total %>
    </td>
    <% end %>
   </tr>
 </tbody>